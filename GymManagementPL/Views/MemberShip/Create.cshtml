@model GymManagementBLL.ViewModels.MemberShipViewModel.CreateMemberShipViewModel

@{
    ViewData["Title"] = "Create Membership";
}

@if (TempData["Error"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="container">
            <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
                <h2 class="fw-bold">Create New Membership</h2>
                <a asp-controller="MemberShip" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3 py-2">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
            </header>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Membership Information</h5>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="Create" asp-controller="MemberShip" method="post">
                                @Html.AntiForgeryToken()

                                <div class="mb-4">
                                    <label asp-for="MemberId" class="form-label fw-semibold">
                                        <i class="bi bi-person me-1"></i> Select Member
                                    </label>
                                    <select asp-for="MemberId" asp-items="@ViewBag.Members" class="form-select">
                                        <option value="">-- Select a Member --</option>
                                    </select>
                                    <span asp-validation-for="MemberId" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="PlanId" class="form-label fw-semibold">
                                        <i class="bi bi-clipboard-check me-1"></i> Select Plan
                                    </label>
                                    <select asp-for="PlanId" asp-items="@ViewBag.Plans" class="form-select">
                                        <option value="">-- Select a Plan --</option>
                                    </select>
                                    <span asp-validation-for="PlanId" class="text-danger"></span>
                                    <small class="text-muted">Only active plans are shown</small>
                                </div>

                                <div class="alert alert-info" role="alert">
                                    <h6 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Membership Rules</h6>
                                    <ul class="mb-0 small">
                                        <li>Member can only have one active membership at a time</li>
                                        <li>Membership starts immediately upon creation</li>
                                        <li>Duration is based on the selected plan</li>
                                    </ul>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                    <a asp-controller="MemberShip" asp-action="Index" class="btn btn-outline-secondary px-4">
                                        Cancel
                                    </a>
                                    <button type="submit" class="btn btn-fill px-4">
                                        <i class="bi bi-check-lg me-2"></i>Create Membership
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const alertBox = document.getElementById("Alert");
            if (alertBox) {
                setTimeout(() => {
                    alertBox.style.transition = "opacity 0.5s ease";
                    alertBox.style.opacity = "0";
                    setTimeout(() => alertBox.remove(), 500);
                }, 1500);
            }
        });
    </script>
}
