@model GymManagementBLL.ViewModels.SessionScheduleViewModel.SessionMembersListViewModel

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <div>
            <h2 class="text-primary-color mb-0">@Model.SessionName - Attendance</h2>
            <p class="text-muted">
                <i class="bi bi-person-circle me-1"></i>Trainer: @Model.TrainerName |
                <i class="bi bi-calendar3 me-1"></i>@Model.StartDate.ToString("MMM dd, yyyy") |
                <i class="bi bi-clock me-1"></i>@Model.StartDate.ToString("hh:mm tt") - @Model.EndDate.ToString("hh:mm tt")
                <span class="badge bg-success ms-2">Ongoing</span>
            </p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Sessions
        </a>
    </header>

    @if (Model.Members.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-check2-square me-2"></i>Attendance Management (@Model.Members.Count() members)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Photo</th>
                                <th>Member Name</th>
                                <th>Booked At</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model.Members)
                            {
                                <tr class="@(member.IsAttended ? "table-success" : "")">
                                    <td>
                                        @if (!string.IsNullOrEmpty(member.MemberPhoto))
                                        {
                                            <img src="~/Images/Members/@member.MemberPhoto" alt="@member.MemberName" 
                                                 class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" 
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-person text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td class="align-middle">@member.MemberName</td>
                                    <td class="align-middle">@member.BookedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td class="text-center align-middle">
                                        @if (member.IsAttended)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Attended
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock me-1"></i>Pending
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center align-middle">
                                        @if (!member.IsAttended)
                                        {
                                            <a asp-action="MarkAttendance" 
                                               asp-route-sessionId="@Model.SessionId" 
                                               asp-route-memberId="@member.MemberId"
                                               class="btn btn-success btn-sm">
                                                <i class="bi bi-check-lg me-1"></i> Mark Attended
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="bi bi-check-circle-fill text-success"></i> Confirmed
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="badge bg-success me-2">@Model.Members.Count(m => m.IsAttended) Attended</span>
                        <span class="badge bg-warning text-dark">@Model.Members.Count(m => !m.IsAttended) Pending</span>
                    </div>
                    <span class="text-muted">Total: @Model.Members.Count() members</span>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No Members Booked</h4>
            <p class="text-muted">No members have booked this session</p>
        </div>
    }
</div>
