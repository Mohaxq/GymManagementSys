@model GymManagementBLL.ViewModels.SessionScheduleViewModel.MemberSessionIndexViewModel

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Upcoming Sessions - For Booking Management -->
    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <div>
            <h2 class="text-primary-color mb-0">Upcoming Sessions</h2>
            <p class="text-muted">Manage Bookings - Add members or cancel bookings before sessions start</p>
        </div>
    </header>

    @if (Model.UpcomingSessions.Any())
    {
        <div class="row g-4">
            @foreach (var session in Model.UpcomingSessions)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 session-card">
                        <div class="card-header text-white py-3 bg-primary">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-event me-2"></i>@session.CategoryName
                                </h5>
                                <span class="badge bg-light text-dark">Upcoming</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">@session.Description</p>

                            <div class="session-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="bi bi-person-circle text-primary-color me-2"></i>
                                    <strong>Trainer:</strong> @session.TrainerName
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-calendar3 text-primary-color me-2"></i>
                                    <strong>Date:</strong> @session.DateDisplay
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-clock text-primary-color me-2"></i>
                                    <strong>Time:</strong> @session.TimeRange
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-hourglass-split text-primary-color me-2"></i>
                                    <strong>Duration:</strong> @session.Duration.ToString(@"hh\:mm\:ss")
                                </div>
                                <div class="info-item">
                                    <i class="bi bi-people text-primary-color me-2"></i>
                                    <strong>Capacity:</strong> @session.AvailableSpots/@session.Capacity slots
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                @if (session.AvailableSpots > 0)
                                {
                                    <a asp-action="AddMember" asp-route-sessionId="@session.SessionId" class="btn btn-primary btn-sm">
                                        <i class="bi bi-person-plus me-1"></i> Add Member
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>
                                        <i class="bi bi-person-plus me-1"></i> Session Full
                                    </button>
                                }
                                <a asp-action="GetMembersForUpcomingSession" asp-route-sessionId="@session.SessionId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i> View Booked Members
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-4">
            <i class="bi bi-calendar-x display-4 text-muted"></i>
            <h5 class="mt-3 text-muted">No Upcoming Sessions</h5>
            <p class="text-muted">No sessions scheduled for the future</p>
        </div>
    }

    <!-- Ongoing Sessions - For Attendance Management -->
    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <div>
            <h2 class="text-primary-color mb-0">Ongoing Sessions</h2>
            <p class="text-muted">Manage Attendance - Mark member attendance for active sessions</p>
        </div>
    </header>

    @if (Model.OngoingSessions.Any())
    {
        <div class="row g-4">
            @foreach (var session in Model.OngoingSessions)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 session-card">
                        <div class="card-header text-white py-3 bg-success">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-event me-2"></i>@session.CategoryName
                                </h5>
                                <span class="badge bg-light text-dark">Ongoing</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">@session.Description</p>

                            <div class="session-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="bi bi-person-circle text-primary-color me-2"></i>
                                    <strong>Trainer:</strong> @session.TrainerName
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-calendar3 text-primary-color me-2"></i>
                                    <strong>Date:</strong> @session.DateDisplay
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-clock text-primary-color me-2"></i>
                                    <strong>Time:</strong> @session.TimeRange
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-hourglass-split text-primary-color me-2"></i>
                                    <strong>Duration:</strong> @session.Duration.ToString(@"hh\:mm\:ss")
                                </div>
                                <div class="info-item">
                                    <i class="bi bi-people text-primary-color me-2"></i>
                                    <strong>Capacity:</strong> @session.AvailableSpots/@session.Capacity slots
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="GetMembersForOngoingSession" asp-route-sessionId="@session.SessionId" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-check2-square me-1"></i> Manage Attendance
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-4">
            <i class="bi bi-calendar-x display-4 text-muted"></i>
            <h5 class="mt-3 text-muted">No Ongoing Sessions</h5>
            <p class="text-muted">No sessions currently in progress</p>
        </div>
    }

    @if (!Model.UpcomingSessions.Any() && !Model.OngoingSessions.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No Sessions Available</h4>
            <p class="text-muted">Create training sessions first to get started</p>
            <a asp-controller="Session" asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle me-1"></i> Create Session
            </a>
        </div>
    }
</div>