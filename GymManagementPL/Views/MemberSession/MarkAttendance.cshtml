@model GymManagementBLL.ViewModels.SessionScheduleViewModel.MarkAttendanceViewModel

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-check-circle me-2"></i>Mark Attendance
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Confirm attendance for this member?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Member:</dt>
                        <dd class="col-sm-8">@Model.MemberName</dd>

                        <dt class="col-sm-4">Session:</dt>
                        <dd class="col-sm-8">@Model.SessionName</dd>
                    </dl>

                    <form asp-action="MarkAttendanceConfirmed" method="post">
                        <input type="hidden" name="sessionId" value="@Model.SessionId" />
                        <input type="hidden" name="memberId" value="@Model.MemberId" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="GetMembersForOngoingSession" asp-route-sessionId="@Model.SessionId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg me-1"></i> Confirm Attendance
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
